CREATE TABLE InvoiceWithTag (
    id INTEGER PRIMARY KEY NOT NULL,
    invoice_id INTEGER NOT NULL,
    tag_id INTEGER NOT NULL,

  FOREIGN KEY(tag_id)
         REFERENCES InvoiceTag(invoice_tag_id)
         ON DELETE CASCADE
);

saveInvoiceTag:
INSERT
INTO InvoiceWithTag (id, invoice_id, tag_id)
VALUES (?, ?, ?);

getInvoiceTag:
SELECT tag_id
FROM InvoiceWithTag
WHERE invoice_id = :invoice_id;