CREATE TABLE Invoice (
  invoice_id INTEGER PRIMARY KEY NOT NULL,
  number TEXT,
  issuing_date TEXT,
  order_number TEXT,
  currency TEXT,
  due_date TEXT,
  footer TEXT,

  created_at REAL DEFAULT (datetime('now', 'localtime')),
  updated_at REAL DEFAULT (datetime('now', 'localtime')),
  deleted_at REAL DEFAULT (datetime('now', 'localtime')));

