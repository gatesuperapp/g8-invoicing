get:
SELECT *
FROM Invoice
WHERE invoice_id = :id;

getId:
SELECT invoice_id
FROM Invoice
WHERE invoice_id = :id;

getAll:
SELECT *
FROM Invoice;

getAllIds:
SELECT invoice_id
FROM Invoice;

save:
INSERT INTO Invoice (invoice_id, number, delivery_date, order_number, currency, due_date)
VALUES (?,  ?,  ?, ?, ?, ?);

update:
UPDATE Invoice
SET number = :number,
    delivery_date = :delivery_date,
    order_number = :order_number,
    currency =: currency,
    due_date =: due_date
WHERE
    invoice_id = :invoice_id;

delete:
DELETE FROM Invoice
WHERE invoice_id = :id;

getLastInsertedRowId:
SELECT invoice_id
FROM Invoice
ORDER BY invoice_id DESC
LIMIT 1;

